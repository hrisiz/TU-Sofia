import java.io.EOFException;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;
import java.util.List;

public class Users {
	List<User> users;
	private static final File usersFile = new File("DB/users");
	
	public Users() {
		users = new ArrayList<User>();
		try {
			usersFile.createNewFile();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	@Override
	private String toString() {
		String result;
		for (User user : users) {
			result += user;
		}
		return result;
	}
	
	public boolean isUserExist(User user){
		return users.contains(user);
	}
	
	public void addUser(User user){
		users.add(user);
	}
	
	public void LoadUsers(){
		try {
			FileInputStream fin = new FileInputStream(usersFile);
			ObjectInputStream ois = new ObjectInputStream(fin);
			User readUser;
			while(true){
				try {
					readUser = (User)ois.readObject();
					if(!this.isUserExist(readUser)){
						users.add(readUser);
					}
				} catch (EOFException e) {
					break;
				} catch (ClassNotFoundException e) {
					e.printStackTrace();
				}
			}
			System.out.println("xaxa");
			ois.close();
		} catch (EOFException e) {
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public void SafeUsers(){
		try {
			FileOutputStream fout = new FileOutputStream(usersFile,true);
			ObjectOutputStream oos = new ObjectOutputStream(fout);
			for (User user : users) {
				oos.writeObject(user);
			}
			oos.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
