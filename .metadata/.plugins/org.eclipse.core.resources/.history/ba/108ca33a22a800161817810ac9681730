import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;
import java.util.List;

public class Users {
	List<User> users;
	private static final File usersFile = new File("DB/users");
	
	public Users() {
		users = new ArrayList<User>();
	}
	
	public void LoadUsers(){
		try {
			FileInputStream fin = new FileInputStream(usersFile);
			ObjectInputStream ois = new ObjectInputStream(fin);
			while(true){
				try {
					users.add(((User)ois.readObject()));
				} catch (ClassNotFoundException e) {
					break;
				}
			}
			System.out.println("xaxa");
			ois.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public void SafeUsers(){
		try {
			FileOutputStream fout = new FileOutputStream(usersFile,true);
			ObjectOutputStream oos = new ObjectOutputStream(fout);
			for (User user : users) {
				oos.writeObject(user);
			}
			oos.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
