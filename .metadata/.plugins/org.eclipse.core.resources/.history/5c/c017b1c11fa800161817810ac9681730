import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

public class FileSystem {
	private File usersFile;
	
	public FileSystem(String usersFileName) throws FileSystemException {
		this.usersFile = new File(usersFileName);
		
		try {
			usersFile.createNewFile();
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		if(!this.usersFile.isFile()){
			throw new FileSystemException("Wrong File");
		}
		
	}

	public void addUser(User user) {
		try {
			FileOutputStream fout = new FileOutputStream(usersFile);
			ObjectOutputStream oos = new ObjectOutputStream(fout);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.writeObject(user);
			oos.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	public void getAllUsers(){
		try {
			FileInputStream fin = new FileInputStream(usersFile);
			ObjectInputStream ois = new ObjectInputStream(fin);
			while(true){
				try {
					System.out.println(((User)ois.readObject()));
				} catch (ClassNotFoundException e) {
					e.printStackTrace();
				}
			}
		//	ois.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
