import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;
import java.util.List;

public class Users {
	List<User> users;
	private static final File usersFile = new File("DB/users");
	
	public Users() {
		users = new ArrayList<User>();
	}
	
	public void isUserExist(String username, String password){
		return users.contains(new User(username,password));
	}
	
	public void addUser(String name, String password){
		try {
			users.add(new User(name,password));
		} catch (UserException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public void LoadUsers(){
		try {
			FileInputStream fin = new FileInputStream(usersFile);
			ObjectInputStream ois = new ObjectInputStream(fin);
			User readUser;
			while(true){
				try {
					readUser = (User)ois.readObject();
					if(!users.contains(readUser)){
						users.add(readUser);
					}
				} catch (ClassNotFoundException e) {
					break;
				}
			}
			System.out.println("xaxa");
			ois.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public void SafeUsers(){
		try {
			FileOutputStream fout = new FileOutputStream(usersFile,true);
			ObjectOutputStream oos = new ObjectOutputStream(fout);
			for (User user : users) {
				oos.writeObject(user);
			}
			oos.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
